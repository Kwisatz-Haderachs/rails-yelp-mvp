
<div class="container">
  <div class="row">
    <h1>Make a Review</h1>
    <div class="col-sm-4 offset-sm-4">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.submit "add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="link"> <%= link_to "Back", restaurants_path %></div>
</div>


